<h1>Subscriber Data for <%= subscriber.fullName %></h1>
<%# Add a table to display subscriber data %>
<table class="table">
  <tr>
    <th>Name</th>
    <td><%= subscriber.name %></td>
  </tr>
  <tr>
    <th>Email</th>
    <td><%= subscriber.email %></td>
  </tr>
  <tr>
    <th>Zip Code</th>
    <td><%= subscriber.zipCode %></td>
  </tr>
  <tr>
    <th>Password</th>
    <td><%= subscriber.password %></td>
  </tr>
</table>
<%# Check for linked subscriber accounts %>
<% if (subscriber.subscribedAccount) {%>
    <h4 class="center"> This subscriber has a
    <a href="<%=`/subscribers/${subscriber.subscribedAccount}` %>">
    subscribed account</a>.
    </h4>
<% } %>
<%# Add links to edit and delete a subscriberâ€™s account from their profile page %>
<div>
  <a href="/subscribers">View all subscribers</a>
</div>
<div>
  <a href="<%=`/subscribers/${subscriber._id}/edit`%>">
    Edit Subscriber Details
  </a>
</div>
<div>
<a href="<%= `/subscribers/${subscriber._id}/delete?_method=DELETE` %>"
  onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
</div>

<p>This subscriber has <%= subscriber.courses.length %> associated course(s)</p>
